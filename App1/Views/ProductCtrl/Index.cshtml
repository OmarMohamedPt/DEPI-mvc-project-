@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout1";
}


<div class="mt-3 p-5">
<h1>All Products</h1>
<br />
<br />

<a asp-controller= "ProductCtrl"  asp-action="Create" class="btn btn-primary"> Create New Product  </a>

<br />

@if(Model.Count()> 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th> @Html.DisplayNameFor(p => p.name) </th>
                <th> @Html.DisplayNameFor(p => p.price) </th>
                <th> @Html.DisplayNameFor(p => p.description) </th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach(var product in Model)
            {
                <tr>
                    <td> @product.name</td>
                    <td> @product.price </td>
                    <td> @product.description </td>

                    <td>
                        <a asp-controller="ProductCtrl" asp-action="Details" class="btn btn-warning" asp-route-id="@product.id"><i class="fas fa-eye"></i> Details</a>
                        
                        
                    </td>

                    <td>
                        <a asp-controller="ProductCtrl" asp-action="Edit" class="btn btn-success" asp-route-id="@product.id"><i class="fas fa-edit"></i> Edit </a>
                    </td>

                    <td>
                        <a asp-controller="ProductCtrl" asp-action="Delete" class="btn btn-danger" asp-route-id="@product.id"> <i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning" >
        <h3>There is no Products</h3>
    </div>
}

</div>