@using DAL.Models.Product;
@model IEnumerable<Product>

{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>
<br />
<br />

<a asp-controller="ProductCtrl" asp-action="Create" class="btn btn-primary" > Create New Product  </a>

<br />

@if(Model.Count()> 0)
{
    <table>
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(p=>p.id) </th>
                <th> @Html.DisplayNameFor(p => p.name) </th>
                <th> @Html.DisplayNameFor(p => p.price) </th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach(var product in Model)
            {
                <tr>
                    <td> @product.id </td>
                    <td> @product.name </td>
                    <td> @product.price </td>

                    <td>
                        <a asp-controller="ProductCtrl" asp-action="Details" class="btn btn-warning" asp-route="@product.id"> </a>
                    </td>

                    <td>
                        <a asp-controller="ProductCtrl" asp-action="Update" class="btn btn-success" asp-route="@product.id"> </a>
                    </td>

                    <td>
                        <a asp-controller="ProductCtrl" asp-action="Delete" class="btn btn-danger" asp-route="@product.id"> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning" >
        <h3>There is no Products</h3>
    </div>
}

