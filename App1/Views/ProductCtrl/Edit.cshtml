@model Product
@{
    ViewData["Title"] = "Edit";
	Layout = "_Layout1";
}

<div class="mt-3 p-5">
<h1>Edit Product</h1>
<br />
<br />

<form asp-action="Edit">

	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label class="col-form-label" asp-for="name"> Name </label>
		<input asp-for="name" class="form-control" />
		<span asp-validation-for="name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="price">	Price </label>
		<input asp-for="price" class="form-control" />
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="description"> Description </label>
		<input type="text" asp-for="description" class="form-control" />
	</div>
	<br />
	<input type="submit" value="Save" class="btn btn-primary" />
		<bold> | </bold>
	<a asp-action="Index" class="mt-auto brn btn-light">Back To List</a>
</form>

</div>