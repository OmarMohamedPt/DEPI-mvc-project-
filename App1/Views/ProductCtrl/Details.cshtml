@model Product

@{
	ViewData["Title"] = "Details";
	Layout = "_Layout1";

}




<div class="mt-3 p-5">
	<h1>Product Details</h1>


	<div class="form-group">
		<label class="col-form-label" asp-for="name"> Name </label>
		<input asp-for="name" class="form-control" readonly/>
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="price">	Price </label>
		<input asp-for="price" class="form-control" readonly />
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="description"> Description </label>
		<input type="text" asp-for="description" class="form-control" readonly />
	</div>
	<br />
	

	<a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.id"> Edit  </a>
	<bold> | </bold>
	<a asp-action="Index" class="mt-auto brn btn-light">Back To List</a>
</div>